rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /User/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if false;
    }

    match /City/{document} {
      allow read: if true;
      allow write: if false;
    }

    match /Layout/{document} {
      allow read: if true;
      allow write: if false;
    }

    match /Player/{document} {
      allow read: if true;
      allow write: if false;
    }
  }
}
